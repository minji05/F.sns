<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_toolbar" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/user"
        app:civ_border_color="#5790DF"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user2"
        app:civ_border_color="#5790DF"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toEndOf="@+id/iv_user"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user3"
        app:civ_border_color="#5790DF"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toEndOf="@+id/iv_user2"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user4"
        app:civ_border_color="#5790DF"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toEndOf="@+id/iv_user3"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user5"
        app:civ_border_color="#5790DF"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toEndOf="@+id/iv_user4"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="583dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="370dp"
                android:layout_height="338dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/card1"></ImageView>

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="370dp"
                android:layout_height="338dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/card2"></ImageView>

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="370dp"
                android:layout_height="338dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/card3"></ImageView>

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="370dp"
                android:layout_height="338dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/card4"></ImageView>

            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="370dp"
                android:layout_height="338dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/card5"></ImageView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>